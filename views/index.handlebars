 <header><h1 id="h1">Eat-Da-Burger!</h1></header>
            <div class="row">
                <div class="col-md-4">
                    <div class="card" >
                        <div class="card-header">
                          <h5>Your Burgers!</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                          {{#each burgers}}
                            {{#unless devoured}}
                              <li class="list-group-item">{{> burgers/burger-block devoured=true}}</li>
                            {{/unless}}
                          {{/each}}
                        </ul>
                      </div>
                </div> 
                <div id="inputDiv" class="col-md-4">
                    <div class="card">
                        <img src="./assets/css/burger1.png" class="card-img-top" width="60%" alt="funny burger">
                            <div class="card-body">
                                <form class="create-form">
                                    <p>Type the name of your Burger and click on submit</p>
                                        <div class="input-group">
                                            <div class="col">
                                                <input type="text" id="Burg" class="form-control" placeholder="Example: Double Cheese Burger">
                                            </div>
                                        </div>
                                        <div>
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                </form>
                            </div>
                    </div>
                </div> 
                <div class="col-md-4">
                <div class="card" >
                    <div class="card-header">
                      <h5>Devoured Burgers!</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        {{#each burgers}}
                            {{#if devoured}}
                                <li class="list-group-item">{{> burgers/burger-block devoured=false}}</li>
                            {{/if}}
                        {{/each}}
                    </ul>
                  </div>
                </div>
            </div>
        </div>
